<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.devsolutions.camelus.controllers.ShowOrdersController">
	<children>
		<VBox layoutY="-1.0">
			<children>
				<BorderPane>
					<center>
						<HBox BorderPane.alignment="CENTER">
							<children>
								<Button fx:id="takeOrderBtn" mnemonicParsing="false"
									text="Prise Commande">
									<HBox.margin>
										<Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
									</HBox.margin>
								</Button>
								<Button fx:id="showOrderBtn" disable="true"
									mnemonicParsing="false" text="Consulter Commande">
									<HBox.margin>
										<Insets bottom="10.0" right="20.0" top="10.0" />
									</HBox.margin>
								</Button>
								<Button fx:id="pdfBtn" mnemonicParsing="false" text="Créer PDF">
									<HBox.margin>
										<Insets right="20.0" top="10.0" />
									</HBox.margin>
								</Button>
							</children>
						</HBox>
					</center>
					<left>
						<Pane fx:id="leftPane" prefWidth="250.0"
							BorderPane.alignment="CENTER" />
					</left>
					<right>
						<Pane fx:id="rightPane" prefWidth="250.0"
							BorderPane.alignment="CENTER" />
					</right>
				</BorderPane>
				<BorderPane>
					<center>
						<HBox BorderPane.alignment="CENTER">
							<children>
								<TextField fx:id="searchField" prefWidth="200.0"
									promptText="Recherche" />
							</children>
						</HBox>
					</center>
					<left>
						<Pane fx:id="leftSearchPane" prefWidth="300.0"
							BorderPane.alignment="CENTER" />
					</left>
					<right>
						<Pane fx:id="rightSearchPane" prefWidth="300.0"
							BorderPane.alignment="CENTER" />
					</right>
					<top>
						<Pane prefHeight="20.0" BorderPane.alignment="CENTER" />
					</top>
					<bottom>
						<Pane prefHeight="20.0" BorderPane.alignment="CENTER" />
					</bottom>
				</BorderPane>
				<TableView fx:id="orderTableView">
					<columns>
						<TableColumn fx:id="orderIdCol" prefWidth="100.0"
							text="Id" />
						<TableColumn fx:id="vendorFNameCol" prefWidth="150.0"
							text="Prénom du Vendeur" />
						<TableColumn fx:id="vendorLNameCol" prefWidth="150.0"
							text="Nom du Vendeur" />
						<TableColumn fx:id="clientNameCol" prefWidth="100.0"
							text="Nom du Client" />
						<TableColumn fx:id="commentCol" prefWidth="100.0"
							text="Commentaire" />
						<TableColumn fx:id="orderedAtCol" prefWidth="200.0"
							text="Date de commande" />
					</columns>
				</TableView>
			</children>
		</VBox>
	</children>
</AnchorPane>
