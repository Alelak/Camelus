<?xml version="1.0" encoding="UTF-8"?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import com.devsolutions.camelus.utils.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>







<GridPane fx:id="motherGrid" prefWidth="900"
	xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.devsolutions.camelus.controllers.ShowOrdersController">
	<rowConstraints>
		<RowConstraints percentHeight="90" />
		<RowConstraints percentHeight="10" />
	</rowConstraints>
	<columnConstraints>
		<ColumnConstraints percentWidth="100" />
	</columnConstraints>
	<children>
		<GridPane fx:id="content" GridPane.rowIndex="0"
			gridLinesVisible="False">
			<rowConstraints>
				<RowConstraints fx:id="rowOne" />
				<RowConstraints fx:id="rowTwo" />
			</rowConstraints>
			<columnConstraints>
				<ColumnConstraints percentWidth="100" />
			</columnConstraints>
			<children>
				<VBox spacing="0" alignment="TOP_CENTER" fx:id="gridRowOne"
					GridPane.rowIndex="0">
					<padding>
						<Insets top="150.0" />
					</padding>
					<Label fx:id="message1" text="La base de donnÃ©es est vide." />
					<Label fx:id="message2" text="Prendre maintenant une commande." />
				</VBox>
				<GridPane fx:id="gridRowTwo" GridPane.rowIndex="1"
					gridLinesVisible="false">
					<padding>
						<Insets bottom="6.0" left="10.0" right="10.0" top="10.0" />
					</padding>
					<rowConstraints>
						<RowConstraints percentHeight="10" />
						<RowConstraints percentHeight="90" />
					</rowConstraints>
					<columnConstraints>
						<ColumnConstraints percentWidth="50" />
						<ColumnConstraints percentWidth="50" />
					</columnConstraints>
					<children>
						<HBox spacing="5" alignment="BOTTOM_LEFT" GridPane.rowIndex="0"
							GridPane.columnIndex="0">
							<padding>
								<Insets bottom="5.0" />
							</padding>
							<TextField fx:id="searchField" minWidth="370"
								promptText="Chercher des commandes par No de commande, Entreprise."></TextField>
						</HBox>
						<HBox alignment="BOTTOM_RIGHT" GridPane.rowIndex="0"
							GridPane.columnIndex="1">
							<padding>
								<Insets bottom="5.0" />
							</padding>
							<Button fx:id="btnRefresh" prefWidth="120" styleClass="flat-btn"
								text="Actualiser">
								<graphic>
									<FontAwesomeIconView styleClass="whiteFont"
										icon="ICON_REFRESH" />
								</graphic>
							</Button>
						</HBox>
						<TableView styleClass="tableView" fx:id="orderTableView"
							GridPane.rowIndex="1" GridPane.columnIndex="0"
							GridPane.columnSpan="2">
							<columns>
								<TableColumn maxWidth="450" fx:id="orderIdCol" 
									text="No" />

								<TableColumn  fx:id="vendorNameCol" 
									text="Nom du Vendeur" />
								<TableColumn fx:id="clientNameCol" 
									text="Nom du Client" />
								<TableColumn fx:id="orderedAtCol" 
									text="Date de commande" />
							</columns>
							<columnResizePolicy>
								<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
							</columnResizePolicy>
						</TableView>
					</children>
				</GridPane>
			</children>
		</GridPane>
		<HBox alignment="TOP_CENTER" spacing="5" id="footer"
			GridPane.rowIndex="1">

			<Button fx:id="takeOrderBtn" prefWidth="120" styleClass="flat-btn"
				text="Effectuer">
				<graphic>
					<FontAwesomeIconView styleClass="whiteFont"
						icon="ICON_PLUS" />
				</graphic>
			</Button>
			<Button disable="true" fx:id="showOrderBtn" prefWidth="120"
				styleClass="flat-btn" text="Consulter">
				<graphic>
					<FontAwesomeIconView styleClass="whiteFont"
						icon="ICON_EYE_OPEN" />
				</graphic>
			</Button>
			<Button disable="true" fx:id="pdfBtn" prefWidth="120"
				styleClass="flat-btn" text="Exporter">
				<graphic>
					<FontAwesomeIconView styleClass="whiteFont"
						icon="ICON_DOWNLOAD" />
				</graphic>
			</Button>

		</HBox>
	</children>
	<stylesheets>
		<URL value="@Content.css" />
	</stylesheets>
</GridPane>





























