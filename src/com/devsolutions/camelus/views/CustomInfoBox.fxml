<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>

<?import com.devsolutions.camelus.utils.FontAwesomeIconView?>
<GridPane id="gridPane" alignment="CENTER" gridLinesVisible="false"
	prefHeight="190.0" prefWidth="440.0" xmlns="http://javafx.com/javafx/8"
	xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.devsolutions.camelus.controllers.CustomInfoBoxController">


	<rowConstraints>
		<RowConstraints percentHeight="14" />
		<RowConstraints percentHeight="66" />
		<RowConstraints percentHeight="20" />
	</rowConstraints>
	<columnConstraints>
		<ColumnConstraints percentWidth="100" />
	</columnConstraints>

	<children>
		<HBox fx:id="toolBar" alignment="TOP_RIGHT" style="-fx-background-color: #46474c;"
			GridPane.rowIndex="0">
			<children>
				<Label fx:id="lblClose" alignment="CENTER" onMouseClicked="#CloseWindow"
					prefHeight="30" prefWidth="30">
					<HBox.margin>
						<Insets bottom="0" left="0" right="-2" top="-2" />
					</HBox.margin>
					<graphic>
						<FontAwesomeIconView id="closeFont"
							styleClass="font-awesome" icon="ICON_REMOVE" />
					</graphic>
				</Label>
			</children>
		</HBox>



		<Label GridPane.rowIndex="1" fx:id="msg" alignment="CENTER"
			prefHeight="148.0" prefWidth="439.0" wrapText="true">
			<padding>
				<Insets top="5.0" bottom="5.0" left="10.0" right="10.0" />
			</padding>
		</Label>



		<HBox GridPane.rowIndex="2" alignment="TOP_RIGHT" prefHeight="200.0"
			prefWidth="100.0" spacing="5.0">
			<padding>
				<Insets right="7.0" />
			</padding>
			<children>
				<Button fx:id="btn" styleClass="flat-btn" mnemonicParsing="false"
					prefHeight="25.0" prefWidth="96.0" />
			</children>
		</HBox>


	</children>
</GridPane>
