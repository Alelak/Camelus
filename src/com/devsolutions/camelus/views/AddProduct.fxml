<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import com.devsolutions.camelus.utils.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import java.net.*?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.image.*?>

<GridPane id="motherGrid" prefHeight="670" prefWidth="550"
	xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.devsolutions.camelus.controllers.AddProductController">

	<rowConstraints>
		<RowConstraints percentHeight="4.5" />
		<RowConstraints percentHeight="84.5" />
		<RowConstraints percentHeight="10" />
	</rowConstraints>
	<columnConstraints>
		<ColumnConstraints percentWidth="100" />
	</columnConstraints>

	<children>
		<GridPane fx:id="titleBar" GridPane.rowIndex="0"
			style="-fx-background-color: #efefef;">
			<rowConstraints>
				<RowConstraints percentHeight="100" />
			</rowConstraints>
			<columnConstraints>
				<ColumnConstraints percentWidth="50" />
				<ColumnConstraints percentWidth="50" />
			</columnConstraints>

			<children>


				<Label text="Ajouter Produit" GridPane.ColumnIndex="0">
					<padding>
						<Insets left="7" />
					</padding>
				</Label>

				<HBox GridPane.columnIndex="1" alignment="TOP_RIGHT">
					<children>
						<Label fx:id="lblClose" alignment="CENTER" onMouseClicked="#CloseWindow"
							prefHeight="30" prefWidth="30">
							<graphic>
								<FontAwesomeIconView id="closeFont" icon="ICON_REMOVE" />
							</graphic>
						</Label>
					</children>
				</HBox>
			</children>
		</GridPane>

		<GridPane  GridPane.rowIndex="1">
			<rowConstraints>
				<RowConstraints valignment="CENTER" />
				<RowConstraints valignment="CENTER" percentHeight="11.5" />
				<RowConstraints percentHeight="10.3" />
				<RowConstraints percentHeight="10.3" />
				<RowConstraints percentHeight="10.3" />
				<RowConstraints percentHeight="10.3" />
				<RowConstraints percentHeight="10.3" />
				<RowConstraints percentHeight="10.3" />
				<RowConstraints percentHeight="10.3" />
				<RowConstraints percentHeight="10.3" />
				<RowConstraints valignment="TOP" percentHeight="40" />

			</rowConstraints>
			<columnConstraints>
				<ColumnConstraints halignment="RIGHT"
					percentWidth="39" />
				<ColumnConstraints halignment="CENTER"
					percentWidth="45" />
				<ColumnConstraints halignment="LEFT" percentWidth="16" />
			</columnConstraints>

			<children>
			<HBox alignment="CENTER" GridPane.rowIndex="0" GridPane.ColumnIndex="0" GridPane.ColumnSpan="3"> 
				<ImageView 
					fx:id="imageProduct" fitHeight="80.0" style="-fx-background-color: white;"
					fitWidth="100.0" pickOnBounds="true" preserveRatio="true"
					>
					<image>
						<Image url="@../../../../images/nopicture.jpg">
						</Image>
					</image>
				</ImageView>
				</HBox>
				<Label GridPane.rowIndex="1" GridPane.ColumnIndex="0"
					GridPane.ColumnSpan="3"
					text="*Saisir tous les champs qui sont avec étoile afin de passer la validation du formulaire. ">
					<padding>
						<Insets right="70" />
					</padding>
				</Label>


				<Label GridPane.rowIndex="2" GridPane.ColumnIndex="0" text="UPC:">
				</Label>
				<Label GridPane.rowIndex="3" GridPane.ColumnIndex="0"
					text="Nom de Produit:">
				</Label>
				<Label GridPane.rowIndex="4" GridPane.ColumnIndex="0"
					text="Quantitè de Produit">
				</Label>
				<Label GridPane.rowIndex="5" GridPane.ColumnIndex="0"
					text="Unitè de Produit:">
				</Label>
				<Label GridPane.rowIndex="6" GridPane.ColumnIndex="0"
					text="Categorie de Produit:">
				</Label>
				<Label GridPane.rowIndex="7" GridPane.ColumnIndex="0"
					text="Image de Produit:">
				</Label>
				<Label GridPane.rowIndex="8" GridPane.ColumnIndex="0"
					text="Prix d'achat:">
				</Label>
				<Label GridPane.rowIndex="9" GridPane.ColumnIndex="0"
					text="Prix de Vente:">
				</Label>

				<TextField fx:id="upc" GridPane.rowIndex="2"
					GridPane.ColumnIndex="1" maxWidth="235"></TextField>
				<TextField fx:id="name" GridPane.rowIndex="3"
					GridPane.ColumnIndex="1" maxWidth="235"></TextField>
				<TextField fx:id="quantity" GridPane.rowIndex="4"
					GridPane.ColumnIndex="1" maxWidth="235"></TextField>
				<ChoiceBox fx:id="unit" GridPane.rowIndex="5"
					GridPane.ColumnIndex="1" maxWidth="235">
				</ChoiceBox>
				<ChoiceBox fx:id="category" GridPane.rowIndex="6"
					GridPane.ColumnIndex="1" maxWidth="235">
				</ChoiceBox>
				<Button fx:id="btnAddImg" GridPane.rowIndex="7"
					GridPane.ColumnIndex="1" maxWidth="235" text="Add image"></Button>
				<TextField fx:id="costPrice" GridPane.rowIndex="8"
					GridPane.ColumnIndex="1" maxWidth="235"></TextField>
				<TextField fx:id="sellingPrice" GridPane.rowIndex="9"
					GridPane.ColumnIndex="1" maxWidth="235"></TextField>


				<TitledPane prefHeight="110" GridPane.rowIndex="10"
					GridPane.ColumnIndex="0" GridPane.ColumnSpan="3" animated="true"
					text="Description">
					<padding>
						<Insets right="5" left="5" />
					</padding>

					<content>
						<TextArea fx:id="description" promptText="Veillez saisir une descritpion" />
					</content>

				</TitledPane>



				<Label GridPane.rowIndex="2" GridPane.ColumnIndex="2">
					<graphic>
						<FontAwesomeIconView styleClass="starFont"
							icon="ICON_STAR" />
					</graphic>
				</Label>

				<Label GridPane.rowIndex="3" GridPane.ColumnIndex="2">
					<graphic>
						<FontAwesomeIconView styleClass="starFont"
							icon="ICON_STAR" />
					</graphic>
				</Label>

				<Label GridPane.rowIndex="4" GridPane.ColumnIndex="2">
					<graphic>
						<FontAwesomeIconView styleClass="starFont"
							icon="ICON_STAR" />
					</graphic>
				</Label>

				<Label GridPane.rowIndex="8" GridPane.ColumnIndex="2" text="($)">
					<graphic>
						<FontAwesomeIconView styleClass="starFont"
							icon="ICON_STAR" />
					</graphic>
				</Label>
				<Label GridPane.rowIndex="9" GridPane.ColumnIndex="2" text="($)">

				</Label>
			</children>
		</GridPane>

		<HBox alignment="BOTTOM_RIGHT" spacing="5" GridPane.rowIndex="2">
			<padding>
				<Insets right="5" bottom="8" />
			</padding>
			<Button prefWidth="120" styleClass="flat-btn" fx:id="btnAddProduct"
				text="Ajouter"></Button>
			<Button prefWidth="120" styleClass="flat-btn" fx:id="btnCancelProduct"
				text="Annuler"></Button>
		</HBox>
	</children>



	<stylesheets>
		<URL value="@childWindow.css" />
	</stylesheets>
</GridPane>

