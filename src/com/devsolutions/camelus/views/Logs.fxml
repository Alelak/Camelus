<GridPane id="motherGrid" prefHeight="250" prefWidth="450"
	xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.devsolutions.camelus.views.LogsController">
	<rowConstraints>
		<RowConstraints percentHeight="12" />
		<RowConstraints percentHeight="88" />
	</rowConstraints>
	<columnConstraints>
		<ColumnConstraints percentWidth="100" />
	</columnConstraints>
	<children>
		<GridPane fx:id="titleBar" GridPane.rowIndex="0"
			style="-fx-background-color: #efefef;">
			<rowConstraints>
				<RowConstraints percentHeight="100" />
			</rowConstraints>
			<columnConstraints>
				<ColumnConstraints percentWidth="50" />
				<ColumnConstraints percentWidth="50" />
			</columnConstraints>
			<children>
				<Label text="Logs" GridPane.ColumnIndex="0">
					<padding>
						<Insets left="7" />
					</padding>
				</Label>
				<HBox GridPane.columnIndex="1" alignment="TOP_RIGHT">
					<children>
						<Label fx:id="lblClose" alignment="CENTER" prefHeight="30"
							prefWidth="30">
							<graphic>
								<FontAwesomeIconView id="closeFont" icon="ICON_REMOVE" />
							</graphic>
						</Label>
					</children>
				</HBox>
			</children>
		</GridPane>
		<VBox spacing="20" alignment="TOP_CENTER" GridPane.rowIndex="1">
			<GridPane.margin>
				<Insets left="30" top="30"></Insets>
			</GridPane.margin>
			<Label fx:id="msgTxt">
			</Label>
			<HBox spacing="10">
				<TextField fx:id="filepathTxt" promptText="Chemin du fichier"
					prefWidth="240"></TextField>
				<VBox spacing="5">
					<Button prefWidth="120" styleClass="flat-btn" fx:id="browseBtn"
						text="Naviguer"></Button>
					<Button prefWidth="120" styleClass="flat-btn" disable="true"
						fx:id="exportBtn" text="Exporter"></Button>
				</VBox>
			</HBox>
		</VBox>
	</children>
</GridPane>